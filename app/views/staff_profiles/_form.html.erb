
            <%= form_for @user, url: staff_index_path, method: :post,:multipart=> true, :html=>{:class=>"form-horizontal"} do |f| %>
              <% if @user.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this staff_profile from being saved:</h2>

                  <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
           

             <!-- form group start -->
             <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
               <div class="row">
                <div class="form-group">
                  <div class="col-md-3">
                    <label class="control-label required">First Name</label>
                  </div>
                  <div class="col-md-9">
                    <%=f.text_field :fname ,:class=>"form-control",:required=>true%>
                    
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-3">
                    <label class="control-label required">Last Name</label>
                  </div>
                  <div class="col-md-9">
                    <%=f.text_field :lname ,:class=>"form-control",:required=>true%>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-offset-3 col-md-6">
                  <div class="icheck icheck-square-blue">
                    <div class="radio form-inline">
                    <%=check_box_tag :is_team_lead ,"1",false %> 
                    <label class="control-label"> Is a Team Leader</label>
                    </div>
                    </div>
                  </div>
                </div>        
                
                <div class="form-group">
                  <div class="col-md-3">
                    <label class="control-label required">Username</label>
                  </div>
                  <div class="col-md-9">

                    <%=f.email_field :email ,:class=>"form-control create_email",:placeholder=>"Please enter an email address",:required=>true%>
                    <span class="fa fa-times color-red display-none uniq_email"> Email address already exists.</span>
                  </div>
                </div> 
                  <div class="form-group">
                  <div class="col-md-offset-3 col-md-6">
                  <div class="icheck icheck-square-blue">
                    <div class="radio form-inline">
                    <%=check_box_tag "a" ,"1",false %> 
                    <label class="control-label">Send Password</label>
                    </div>
                    </div>
                  </div>
                </div>  

                <div class="form-group">
                  <div class="col-md-3">
                    <label class="control-label "> Mobile Phone</label>
                  </div>
                  <div class="col-md-9">
                    <%=f.text_field :mobile_phone ,:class=>"form-control"%>
                  </div>
                </div> 
     
                <div class="form-group">
                  <div class="col-md-3">
                    <label class="control-label "> Home Phone</label>
                  </div>
                  <div class="col-md-9">
                          <%=f.text_field :home_phone ,:class=>"form-control"%>
                  </div>
                </div>    
                <!-- <div class="form-group">
                  <div class="col-md-3">
                    <label class="control-label "> Description</label>
                  </div>
                  <div class="col-md-9">
                          <%#=f.text_area :description,:rows=>"5" ,:class=>"form-control"%>
                  </div>
                </div>  -->

                <div class="form-group">
                  <div class="col-md-3">
                    <label class="control-label "> Profile picture</label>
                  </div>
                  <div class="col-md-9">
                         <div class="fileinput fileinput-new" data-provides="fileinput">
                        <div class="fileinput-new thumbnail" style="width: 300px; height: 200px;">
                        <%if f.object.avatar.present?%>
                      
                          <img src="<%=f.object.avatar.url(:thumb)%>" alt="...">
                        <%end%>
                        </div>
                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 300px; max-height: 200px;"></div>
                        <div>
                          <span class="btn btn-default btn-file">
                            <span class="fileinput-new">Select image</span>
                            <span class="fileinput-exists">Change</span>
                            <%=f.file_field :avatar %>
                          </span>
                          <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                        </div>
                      </div>
                  </div>
                </div> 
                <div class="modal-footer">
                <div class="form-actions">
                  <div class="row">
                    <div class="pull-right">
                      <%= f.submit "ADD", :class=>"btn btn-success email btn-beatrice" %>
                    </div>
                    <div class="pull-left">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                  </div>
                </div>
                </div>
              </div>
            </div>    
        <% end %>


