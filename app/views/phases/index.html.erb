


    <div class="row">
      <div class="col-md-12">
        <div class="panel">
          <div class="panel-heading">
            <!-- <div class="panel-title"><h4>Phases</h4></div> -->
            <div class="panel-title"><span>  <%= link_to new_phase_path, :remote => true, method: :get do %>
                    <span class="btn btn-default btn-primary">ADD</span>
                    <% end %>
                     </span> <!-- <span> REMOVE </span> --> </div>

          </div><!--.panel-heading-->
          <div class="panel-body">

            <div class="table-responsive">
            <table class="display table datatables-alphabet-sorting">
              <thead>
                <tr>  
                  <th>Phase Name</th>
                  <th>Team Leader</th>
                  <th>Year</th>
                  <th>No.of Students</th>
                  <th>Actions</th>
                </tr>
              </thead>

              <tfoot>
                <tr>
                  <th>Phase Name</th>
                  <th>Team Leader</th>
                  <th>Year</th>
                  <th>No.of Students</th>
                  <th>Actions</th>
                </tr>
              </tfoot>

              <tbody>
                <% @phases.each do |phase| %>

                  <tr>
                    <td> <%= phase.name %> </td>
                    <td> <%= phase.team_lead_name %> </td>
                    <td> <%= phase.annual_grades.joins(:master_grade).pluck(:value).sort.map(&:inspect).join(', ') %> </td>
                    <td> <%= phase.annual_grades.joins(:annual_grade_students).count %> </td>
                    <td>  <%= link_to edit_phase_path(phase), :remote => true, method: :get,:class=>"btn btn-sm btn-default" do %>
                    <span class="dt-edit fa fa-pencil"></span>
                    <% end %>
                          <%#= link_to phase, method: :delete, data: { confirm: 'Deleting this phase will remove all associated students of the year from their existing tutor groups. Are you sure you want to delete this phase?' },:class=>"btn btn-danger btn-sm dt-delete" do %>
                          <%= link_to phase, method: :delete, data: { confirm: 'Are you sure you want to delete this phase?' },:class=>"btn btn-danger btn-sm dt-delete" do %>
                         <span class="fa fa-trash"></span>
                    <% end %>

                    </td>
                  </tr>
                <% end %>

              </tbody>
            </table>
            </div><!--.overflow-table-->

          </div><!--.panel-body-->
        </div><!--.panel-->
      </div><!--.col-md-12-->
    </div><!--.row-->


