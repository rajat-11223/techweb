<%= form_for(@slot_schedule ,url: schedule_path(@slot_schedule),:method=> :patch) do |f| %>
  <% if @slot_schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@slot_schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% @slot_schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%=f.hidden_field :slot_id,:value=>@slot.id%>
<%=f.hidden_field :master_day_id,:value=>@day.id%>
<%=f.hidden_field :term_id,:value=>@term.id%>

  <div class="row form-group m-b-20">
    <div class="col-md-3">
      <label class="control-label">Subject:</label>
    </div>
    <div class="col-md-7">
      <%= f.select(:subject_id, @subjects.collect {|u| [u.name, u.id]},{:include_blank=>"Select Subject",:selected=>@slot_schedule.sub_subject.subject.id},{:class=>"selectpicker",:onchange=>"show_sub_subjects()"}) %>
    </div>    
  </div>
  <div class="row form-group m-b-20">
   <div class="col-md-3">
      <label class="control-label">Sub-Subject:</label>
    </div>
    <div id="sub_subjects">
    <div class="col-md-7">
      <%= f.select(:sub_subject_id,{},{:include_blank=>"Please select subject first"},{:class=>"selectpicker",:onchange=>"show_sub_subjects()"}) %>
    </div> 
    </div>
  </div>
   <div class="row form-group m-b-20">
    <div class="col-md-3">
      <label class="control-label">Learning Group:</label>
    </div>
    <div class="col-md-7">
      <%= select_tag("learning_group",options_for_select(@learning_groups.collect {|u| [u.name, u.id]}),{:include_blank=>"Select Subject",:class=>"selectpicker",:onchange=>"select_lo()"}) %>
    </div>    
  </div>
