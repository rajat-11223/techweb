<div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">
  <%= form_for(@slot_schedule ,:url=>url_for(:controller=>'schedules',:action=>"create")) do |f| %>
  <% if @slot_schedule.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@slot_schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

    <ul>
      <% @slot_schedule.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%=f.hidden_field :slot_id,:value=>@slot.id%>
  <%=f.hidden_field :master_day_id,:value=>@day.id%>
  <%=f.hidden_field :term_id,:value=>@term.id%>
  <input type="hidden" value="<%= @schedule_display %>" name="schedule_display">
  <div class="row form-group m-b-20">
    <div class="col-md-3">
      <label class="control-label">Subject:</label>
    </div>
    <div class="col-md-9">
      <%= f.select(:subject_id, @subjects.order(name: :asc).collect {|u| [u.name, u.id]},{:include_blank=>"Select Subject"},{:class=>"selectpicker new_subject",:required=>true}) %>
    </div>    
  </div>
  <div class="row form-group m-b-20">
   <div class="col-md-3">
    <label class="control-label">Sub-Subject:</label>
    <div class="ab"></div>
  </div>
  <div class="sub_subjects">
    <div class="col-md-9">
      <%= f.select(:sub_subject_id,{},{:include_blank=>"Select Subject First"},{:class=>"selectpicker",:required=>true}) %>
    </div>
  </div>
</div>

<div class="row form-group m-b-20 select_lg_tg_div">
</div>
<div class="row form-group m-b-20 learning_group_select"> 
</div>
<div class="show_learning_group_students">
</div>
<div class="row form-group m-b-20 tutor_group_select"> 
</div>
<div class="show_tutor_group_students">
</div>
<span class="fa fa-times color-red display-none check_student"> Please select at least one student.</span>
<div class="modal-footer tutorial">
  <div class="form-actions">
    <div class="row">
      <div class="pull-right">
        <%=f.submit "Schedule", :class=>"btn btn-success pull-right create create_schedule btn-beatrice text-white"%>
      </div>
      <div class="pull-left">
        <button class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>

