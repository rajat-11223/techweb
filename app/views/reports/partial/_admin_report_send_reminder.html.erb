<div class="col-md-12">
	<%= form_tag('/admin_send_reminder') do %>

	<div class="panel">
		<div class="panel">
			<div class="form-group col-md-12 ">
				<div class="col-md-1">
					<label class="control-label ">From:</label>
				</div>
				<div class="col-md-9">
					<%=text_field_tag "from",current_user.name,class: "width-100"%>
				</div>
			</div>
			<div class="form-group col-md-12">
				<div class="col-md-1">
					<label class="control-label ">To:</label>
				</div>
				<div class="col-md-9">
					<%=text_field_tag "to",@rep.tutor.email,class: "width-100"%>
				</div>
			</div>
			<div class="form-group col-md-12">
				<div class="col-md-1">
					<label class="control-label ">Subject:</label>
				</div>
				<div class="col-md-9">
					<%=text_field_tag "Subject",@rep.title + " for " + @rep.student.name,class: "width-100"%>
				</div>
			</div>
			<div class="form-group col-md-12">
<%@auto_text = "Hi #{@rep.tutor.fname} <br> <br>You have not completed #{@rep.student.fname}â€™s  <a href= '#{edit_report_url(id: @rep.id, student_id: @rep.student.id)}'>#{@rep.title}</a>  <br /> <br /> <br /> Regards <br /> #{current_user.fname}"%>

				<%=text_area_tag "desc", @auto_text,class: "reminder_summernote"%>

			</div>
<%=hidden_field_tag "rs_id",@rep.id%>



			<div class="modal-footer m-t-20">
				<div class="form-actions">
					<div class="row">
						<div class="pull-right">
							<%= submit_tag "Send ", :class=>"btn btn-success btn-beatrice show_loader" %>
						</div>
						<div class="pull-left">
							<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% end %>
</div>